<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="systeminfo"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<!-- This file contains channel specific information and describes how the different channel types should be
		rendered. Eachcchannel is assigned a default priority configuration. For more info about priorities see
		OH-INF/config/channelConfig.xml
	-->

	<channel-group-type id="memory">
		<label>Physical Memory</label>
		<description>Physical memory information</description>
		<channels>
			<channel id="total" typeId="total">
				<label>Total Memory</label>
				<description>Total main memory size in bytes</description>
			</channel>
			<channel id="available" typeId="bytes">
				<label>Available Memory</label>
				<description>Available main memory size in bytes</description>
			</channel>
			<channel id="availablePercent" typeId="percent">
				<label>Available Memory</label>
				<description>Available main memory size in percent</description>
			</channel>
			<channel id="used" typeId="bytes">
				<label>Used Memory</label>
				<description>Used main memory size in bytes</description>
			</channel>
			<channel id="usedPercent" typeId="percent">
				<label>Used Memory</label>
				<description>Used main memory size in percent</description>
			</channel>
		</channels>
	</channel-group-type>

	<channel-group-type id="heap">
		<label>Heap Memory</label>
		<description>Heap memory information</description>
		<channels>
			<channel id="total" typeId="total">
				<label>Total Heap</label>
				<description>Total heap size in bytes</description>
			</channel>
			<channel id="available" typeId="bytes">
				<label>Available Heap</label>
				<description>How much data is available on the Java heap</description>
			</channel>
			<channel id="availablePercent" typeId="percent">
				<label>Available Heap</label>
				<description>How much heap in percent is available</description>
			</channel>
			<channel id="used" typeId="bytes">
				<label>Used Heap</label>
				<description>How much data is used from the Java heap</description>
			</channel>
			<channel id="usedPercent" typeId="percent">
				<label>Used Heap</label>
				<description>How much heap in percent is used</description>
			</channel>
		</channels>
	</channel-group-type>

	<channel-group-type id="swap">
		<label>Swap Memory</label>
		<description>Swap memory information</description>
		<channels>
			<channel id="total" typeId="total">
				<label>Total Swap</label>
				<description>Total swap size in bytes</description>
			</channel>
			<channel id="available" typeId="bytes">
				<label>Available Swap</label>
				<description>Available swap size in bytes</description>
			</channel>
			<channel id="availablePercent" typeId="percent">
				<label>Available Swap</label>
				<description>Available swap size in percent</description>
			</channel>
			<channel id="used" typeId="bytes">
				<label>Used Swap</label>
				<description>Used main memory size in bytes</description>
			</channel>
			<channel id="usedPercent" typeId="percent">
				<label>Used Swap</label>
				<description>Used main memory size in percent</description>
			</channel>
		</channels>
	</channel-group-type>

	<channel-group-type id="displayGroup">
		<label>Display</label>
		<description>Display parameters</description>
		<channels>
			<channel id="information" typeId="information"/>
		</channels>
	</channel-group-type>

	<channel-group-type id="sensorsGroup">
		<label>Sensor</label>
		<description>Sensor parameters</description>
		<channels>
			<channel id="fanSpeed" typeId="fanSpeed"/>
		</channels>
	</channel-group-type>

	<channel-group-type id="batteryGroup">
		<label>Battery</label>
		<description>Battery parameters</description>
		<channels>
			<channel id="name" typeId="name"/>
			<channel id="remainingCapacity" typeId="remainingCapacity"/>
			<channel id="remainingTime" typeId="remainingTime"/>
		</channels>
	</channel-group-type>

	<channel-group-type id="cpu">
		<label>CPU</label>
		<description>CPU parameters</description>
		<channels>
			<channel id="name" typeId="name"/>
			<channel id="description" typeId="description"/>
			<channel id="temperature" typeId="temperature"/>
			<channel id="maxFrequency" typeId="maxFrequency"/>
			<channel id="voltage" typeId="voltage"/>
			<channel id="frequency" typeId="frequency"/>
		</channels>
	</channel-group-type>

	<channel-group-type id="system">
		<label>System</label>
		<description>System information</description>
		<channels>
			<channel id="uptime" typeId="uptime"/>
			<channel id="load" typeId="load"/>
			<channel id="load1" typeId="loadAverage"/>
			<channel id="load5" typeId="loadAverage"/>
			<channel id="load15" typeId="loadAverage"/>
			<channel id="threads" typeId="threads"/>
		</channels>
	</channel-group-type>

	<channel-type id="bytes" advanced="false">
		<item-type>Number:DataAmount</item-type>
		<label>Read/Written Bytes</label>
		<description>Bytes read/written</description>
		<state readOnly="true" pattern="%d B"/>
		<config-description-ref uri="channel-type:systeminfo:highpriority"/>
	</channel-type>

	<channel-type id="count" advanced="true">
		<item-type>Number</item-type>
		<label>Reads/Writes Count</label>
		<description>The number of reads/writes</description>
		<state readOnly="true" pattern="%d"/>
		<config-description-ref uri="channel-type:systeminfo:mediumpriority"/>
	</channel-type>

	<channel-type id="description" advanced="true">
		<item-type>String</item-type>
		<label>Description</label>
		<description>Description of the device</description>
		<state readOnly="true" pattern="%s"/>
		<config-description-ref uri="channel-type:systeminfo:lowpriority"/>
	</channel-type>

	<channel-type id="frequency" advanced="true">
		<item-type>Number:Frequency</item-type>
		<label>Current Frequency</label>
		<description>Logical processor frequency</description>
		<state readOnly="true" pattern="%.0f MHz"/>
		<config-description-ref uri="channel-type:systeminfo:highpriority"/>
	</channel-type>

	<channel-type id="load">
		<item-type>Number:Dimensionless</item-type>
		<label>System Load</label>
		<description>Current system load in percent</description>
		<state readOnly="true" pattern="%.1f %%"/>
		<config-description-ref uri="channel-type:systeminfo:highpriority"/>
	</channel-type>

	<channel-type id="loadAverage" advanced="true">
		<item-type>Number</item-type>
		<label>Average System Load</label>
		<description>Load as a number of processes for the last 1, 5 or 15 minutes</description>
		<state readOnly="true" pattern="%.1f"/>
		<config-description-ref uri="channel-type:systeminfo:mediumpriority"/>
	</channel-type>

	<channel-type id="maxFrequency" advanced="true">
		<item-type>Number:Frequency</item-type>
		<label>Maximum Frequency</label>
		<description>CPU maximum frequency</description>
		<state readOnly="true" pattern="%.0f MHz"/>
		<config-description-ref uri="channel-type:systeminfo:lowpriority"/>
	</channel-type>

	<channel-type id="name">
		<item-type>String</item-type>
		<label>Name</label>
		<description>Name of the device</description>
		<state readOnly="true" pattern="%s"/>
		<config-description-ref uri="channel-type:systeminfo:lowpriority"/>
	</channel-type>

	<channel-type id="percent">
		<item-type>Number:Dimensionless</item-type>
		<label>Available (%)</label>
		<description>Available size in percent</description>
		<state readOnly="true" pattern="%.1f %%"/>
		<config-description-ref uri="channel-type:systeminfo:highpriority"/>
	</channel-type>

	<channel-type id="temperature" advanced="true">
		<item-type>Number:Temperature</item-type>
		<label>CPU Temperature</label>
		<description>CPU temperature</description>
		<state readOnly="true" pattern="%.1f Â°C"/>
		<config-description-ref uri="channel-type:systeminfo:highpriority"/>
	</channel-type>

	<channel-type id="threads" advanced="true">
		<item-type>Number</item-type>
		<label>Number of Threads</label>
		<description>Total number of threads currently running</description>
		<state readOnly="true" pattern="%d"/>
		<config-description-ref uri="channel-type:systeminfo:mediumpriority"/>
	</channel-type>

	<channel-type id="total">
		<item-type>Number:DataAmount</item-type>
		<label>Total</label>
		<description>Total size</description>
		<state readOnly="true" pattern="%d B"/>
		<config-description-ref uri="channel-type:systeminfo:lowpriority"/>
	</channel-type>

	<channel-type id="voltage" advanced="true">
		<item-type>Number:ElectricPotential</item-type>
		<label>CPU Voltage</label>
		<description>CPU voltage</description>
		<state readOnly="true" pattern="%.1f V"/>
		<config-description-ref uri="channel-type:systeminfo:mediumpriority"/>
	</channel-type>

	<channel-type id="uptime">
		<item-type>Number:Time</item-type>
		<label>System Uptime</label>
		<description>System uptime (time after start)</description>
		<state readOnly="true" pattern="%d s"/>
		<config-description-ref uri="channel-type:systeminfo:mediumpriority"/>
	</channel-type>

	<!--
		Old definitions
	-->
	<channel-type id="fanSpeed" advanced="true">
		<item-type>Number</item-type>
		<label>Fan Speed</label>
		<description>Fan speed in rotations per minute</description>
		<state readOnly="true" pattern="%d rpm"/>
		<config-description-ref uri="channel-type:systeminfo:mediumpriority"/>
	</channel-type>

	<channel-type id="remainingTime">
		<item-type>Number:Time</item-type>
		<label>Remaining Time</label>
		<description>Remaining time</description>
		<state readOnly="true" pattern="%.1f min"/>
		<config-description-ref uri="channel-type:systeminfo:mediumpriority"/>
	</channel-type>

	<channel-type id="remainingCapacity">
		<item-type>Number:Dimensionless</item-type>
		<label>Remaining Capacity</label>
		<description>Remaining capacity in percent</description>
		<state readOnly="true" pattern="%.1f %%"/>
		<config-description-ref uri="channel-type:systeminfo:mediumpriority"/>
	</channel-type>

	<channel-type id="information" advanced="true">
		<item-type>String</item-type>
		<label>Display Information</label>
		<description>Product, manufacturer, SN, width and height of the display in cm</description>
		<state readOnly="true" pattern="%s"/>
		<config-description-ref uri="channel-type:systeminfo:lowpriority"/>
	</channel-type>

</thing:thing-descriptions>
